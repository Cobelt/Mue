@import '../../styles/font.styl'
@import '../../styles/colors.styl'

footer-font-size = 1.1rem
footer-title-font-size = 2.1rem

.footer
  background-color primary-color
  color font-color-on-primary
  width 100%
  font-size footer-font-size


  .footer-list, .footer-line
    display inline-grid

    .list-item, .line-item
      justify-self center
      & > *
        margin 0
        padding 0
        border 0

    .list-item
      padding .5rem 0
      & > *
        margin .4rem 0

    .line-item
      width 100%
      text-align center

      span, p
        margin-top auto
        margin-bottom auto
        color #eee

      a
        padding .5rem 0
        align-content center
        display inline-grid
        font-weight bold
        color white
        cursor pointer
        transition background-color .2s
        &:hover
          background-color link-hover-black-shade-bg
