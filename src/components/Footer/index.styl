@import '../../styles/font.styl'
@import '../../styles/colors.styl'

footer-font-size = 1.1rem
footer-title-font-size = 2.1rem

.footer
  background-color primary-color
  color font-color-on-primary
  width 100%
  font-size footer-font-size

  .footer-element, .footer-list, .footer-line
      display inline-grid

  .footer-element
    &.list-item, &.line-item
      justify-self center
      & > *
        margin 0
        padding 0
        border 0

    &.list-item
      padding .8rem 0
      & > *
        margin .4rem 0