height = 1.7rem

.checkbox,
.checkbox-label
  color #404040
  cursor pointer
  font-size 'calc(%s / 1.3)' % height
  margin 0

.checkbox-label
  padding-left 0.45rem
  vertical-align baseline

.checkbox
  width height

  .svg-container
    vertical-align middle
    max-height 100%
    max-width 100%
    min-width 2rem

    .svg-checkbox
      fill none
      stroke currentColor
      stroke-linecap round
      stroke-linejoin round
      stroke-width 2.5px

.input-hidden 
  height 0
  width 0
  margin 0
  visibility hidden
