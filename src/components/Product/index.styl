@import '../../styles/font.styl'
@import '../../styles/colors.styl'

.product
  background-color #dfdfdf
  border-radius .2rem
  overflow hidden

  .product-image, .product-description
    display inline-grid

  .product-image
    object-fit cover
    max-width 100%
    min-height 100%
    max-height 20rem
    width 100%

  .product-info
    margin 2rem

  .product-title > *
    font-weight 600

  .product-description
    z-index 1
    max-width 100%
    font-size 1.4rem

  .footer
    //background-color secondary-color
    .footer-element
      width 100%

      & > *
        display inline-grid
        text-align center

      & > a
        color white
        transition background-color .2s
        &:hover
          background-color link-hover-black-shade-bg