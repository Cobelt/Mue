@import '../../styles/font.styl'
@import '../../styles/colors.styl'

.card
  background-color #dfdfdf
  border-radius .2rem
  overflow hidden

  .card-image, .card-description
    display inline-grid

  .card-image
    object-fit cover
    min-width 100%
    max-width 100%

  .card-description
    padding 1.5rem
    text-overflow ellipsis
    z-index 1
    width 90%
    font-size 1.4rem

  .footer
    //background-color secondary-color
    .footer-element
      padding 0
      text-align center
      width 100%

      span, p
        margin-top auto
        margin-bottom auto
        color #eee

      a
        align-content center
        display inline-grid
        font-weight bold
        color white
        transition background-color .2s
        &:hover
          background-color link-hover-black-shade-bg
