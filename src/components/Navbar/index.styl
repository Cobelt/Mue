@import '../../utils/colors.styl'

navbar-height = 64px
navbar-line-height = navbar-height

navbar-height-mobile = 56px
navbar-line-height-mobile = navbar-height-mobile

navbar-font-size = 1rem
navbar-brand-font-size = 2.1rem

.navbar

  &.nav-extended
    height auto

    .wrap
      min-height navbar-height-mobile
      height auto

    .nav-content
      position relative
      line-height normal

  color font-color-on-primary
  background-color primary-color
  width 100%
  height navbar-height-mobile
  line-height navbar-height-mobile

  .brand
    position absolute
    color navbar-font-color
    display inline-block
    font-size navbar-brand-font-size
    padding 0 .5rem
    
  .navlabel, .navicon
    display inline-grid

    color font-color-on-primary

    padding 0 .5rem

    transition background-color .2s

    &hover
      background-color link-hover-black-shade-bg
      transition background-color .2s
