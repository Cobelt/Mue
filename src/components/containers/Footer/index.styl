@import '../../../styles/font.styl'
@import '../../../styles/colors.styl'

footer-font-size = 1.1rem
footer-font-size-bigger = 1.6rem
footer-title-font-size = 2.1rem

.footer
  align-content end
  grid-row-gap 0.8rem
  width 100%

  background-color primary-color
  color font-color-on-primary
  font-size footer-font-size

  .footer-list, .footer-line
    display inline-grid
    align-self start

    .list-item, .line-item
      align-content center
      justify-self center
      text-align center
      overflow hidden
      height 100%

      > *
        color white
        border 0
        margin 0
        padding .5rem 0

      a
        cursor pointer
        height 100%

    .list-item
      width 80%

      > h1, h2, h3, h4, h5, h6
        font-weight bold

      a, .line-item a
        box-sizing border-box
        font-weight normal

    .line-item
      width 100%
      a
        font-weight bold
        transition background .3s
        &:hover
          background-color link-hover-black-shade-bg

  .footer-separator
    height 1px
    border-bottom solid 1px rgba(white, 0.5)