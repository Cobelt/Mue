.snackbar 
  bar-height = 3.4rem
  
  align-items center
  background-color rgb(49, 49, 49)
  bottom 0
  color #fff
  display inline-grid
  grid-column-gap 1rem
  grid-template-columns 1fr bar-height
  height bar-height
  margin-top 0.7rem
  max-height bar-height
  max-width 50vw
  opacity 1
  overflow hidden
  padding-left 1rem
  position relative
  width 100%
  
  .close-icon 
    bg-color = #cd382d
    
    align-content center
    align-self start
    background-color bg-color
    border-radius unset
    color #fff
    cursor pointer
    display inline-grid
    font-size 1.3rem
    height bar-height
    justify-content center
    min-width 100%
    text-decoration none
    transition background-color 0.2s
    width 100%
    
    &:hover
      background-color darken(bg-color, 8%)
    
  

