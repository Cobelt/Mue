.close-all 
  bg-color = #cd382d
  height = 2.4rem
  font-size = 1.2rem
  
  align-items center
  background-color bg-color
  color #fff !important
  cursor pointer
  display inline-grid
  font-size font-size
  height height
  justify-items center
  margin-top 0.7rem
  opacity 0.975
  text-decoration none !important
  transition background-color 0.2s
  width 100%
  
  &hover
    background-color darken(bg-color, 8%)

  i.fa 
    margin-left 0.3rem
  

