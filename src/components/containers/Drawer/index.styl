#drawer-root 
  position relative
  z-index 4025


modal-width = 70%
modal-height = 70%

.drawer-black-bg 
  background-color rgba(0, 0, 0, 0.65)
  display inline-grid
  height 100%
  opacity 1
  position fixed
  top 0
  width 100%

  .artp-drawer 
    background-color #fff
    border-radius 0.15rem
    height auto
    overflow-x hidden
    overflow-y auto
    position relative

    &:-webkit-scrollbar 
      display none
    

    &.left 
      justify-self left
      left 0
    

    &.right 
      justify-self right
      right 0
    
  


.clickable-icon
  cursor pointer
  font-size 1.5rem
  padding 0.5rem
  transition filter 0.2s

  &:hover 
    filter brightness(90%)
  

  &:active 
    filter brightness(60%)
  


@keyframes opacity-0-to-1 
  0%  opacity 0 
  100%  opacity 1 


@keyframes appears-from-left 
  0%  left -100% 
  100%  left 0 


@keyframes appears-from-right 
  0%  right -100% 
  100%  right 0 

