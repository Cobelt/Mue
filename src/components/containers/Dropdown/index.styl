.dropdown-wrapper {
  align-self: center;
  display: inline-grid;
  justify-self: center;
  position: relative;
}

.divider {
  border-bottom: solid 1px #e5e5e5;
  height: 1px;
  margin: 9px 0;
  width: 100%;
}

.artp-dropdown {
  background: unset;
  color: #333;
  margin: 0;
  opacity: 0.75;
  padding: 15px;
  transition: opacity 0.2s;

  > span {
    align-items: center;
    display: inline-grid;
    grid-column-gap: 0.4rem;
    grid-template-columns: auto auto;
  }

  &:hover,
  &:active {
    background: unset;
    opacity: 1;
  }

  i.fa-caret-down {
    font-size: 0.8rem;
  }
}

.artp-dropdown-menu {
  background-color: #fff;
  border: 1px solid rgba(0, 0, 0, 0.12);
  box-shadow: 0 6px 12px rgba(0, 0, 0, 0.175);
  display: inline-grid;
  grid-template-rows: repeat(auto-fit, minmax(1rem, 1fr));
  left: 0;
  min-width: 10rem;
  padding: 0.4rem 0;
  position: absolute;
  top: calc(100% + 1px);
  transform-origin: top left;
  transition: max-height 0.2s, opacity 0.2s;
  z-index: 1001;

  a {
    color: #222;
    text-decoration: none;
  }

  > * {
    color: #222;
    cursor: pointer;
    padding: 3px 1.15rem;
    white-space: nowrap;

    &:hover {
      background-color: rgba(0, 0, 0, 0.05);
    }
  }
}
