.body
  padding 1rem 0

  & > .box-shadow-on-hover
    &
      filter brightness(108%)
      opacity .94
      box-shadow 0 1px 2px rgba(0,0,0,0.15)
      transition filter .4s, opacity .4s, box-shadow .4s ease-in-out

    &:hover
      filter brightness(100%)
      opacity 1
      box-shadow: 0 5px 15px rgba(0,0,0,0.3);
      z-index: 1

  .body-element
    display inline-grid
    margin .3rem
    padding 1.4rem
    & > div
      width 100%
      height 100%