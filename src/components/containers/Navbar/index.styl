@import '../../../styles/font.styl'
@import '../../../styles/colors.styl'
@import '../../../styles/variables.styl'

navbar-height = 5.1vw
navbar-line-height = navbar-height

navbar-height-mobile = 64px
navbar-line-height-mobile = navbar-height-mobile

navbar-font-size = 1.15rem
navbar-brand-font-size = 2.1rem

navbar-font-color = #fff
navbar-brand-font-color = #fff


.navbar
  background-color primary-color

  width 100%
  height navbar-height-mobile
  line-height navbar-height-mobile

  font-size navbar-font-size

  .navbar-element
    cursor pointer
    display inline-grid
    justify-content center

    &.brand
      padding 0 .8rem
      font-size navbar-brand-font-size
      font-weight bold

      color rgba(navbar-font-color, .6)
      transition color .2s

      &:hover
        color navbar-brand-font-color
        transition color .2s

    &.label, &.icon
      padding 0 .6rem
      display inline-grid
      align-self center

      color rgba(navbar-font-color, .8)
      transition background-color .3s, color .3s

      &:hover
        background-color link-hover-black-shade-bg
        color navbar-brand-font-color
        transition background-color .3s, color .3s

    &.label, &.icon
      i.material-icons
        line-height navbar-height-mobile

    @media (min-width small-screen-up)
      &.collapse-icon
        display none

    @media (max-width small-screen)
      &:not(.collapse-icon):not(.brand)
        display none !important

  h1, h2, h3, h4, h5, h6, p
    margin 0
    line-height inherit