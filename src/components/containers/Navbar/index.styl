.navbar
  --navbar-font-color #fff
  --navbar-brand-font-color #fff

  --navbar-height 5.1vw
  --navbar-height-mobile 64px

  --navbar-font-size 1.2rem
  --navbar-brand-font-size 2.1rem

  background-color var(--primary-color)

  width 100%
  height var(--navbar-height-mobile)
  line-height var(--navbar-height-mobile)

  font-size var(--navbar-font-size)

  z-index 100

  &::selection
    background-color transparent

  .nav-icon, .nav-label, .nav-brand, .nav-logo
    cursor pointer
    display inline-grid
    justify-content center
    font-size var(--navbar-font-size)

    &::selection
      background-color transparent

    > a
      color inherit


  .nav-brand
    padding 0 .8rem
    font-size var(--navbar-brand-font-size)
    font-weight bold

    color RGBA(var(--navbar-brand-font-color), .6)
    transition color .2s

    &:hover
      color var(--navbar-brand-font-color)
      transition color .2s

  .nav-label, .nav-icon
    padding 0 .6rem
    align-self center
    height 100%

    color RGBA(var(--navbar-font-color), .8)
    transition background-color .3s, color .3s

    &:hover
      background-color var(--link-hover-black-shade-bg)
      color var(--navbar-brand-font-color)
      transition background-color .3s, color .3s

    i.material-icons
      line-height var(--navbar-height-mobile)
      justify-content center
      display inline-grid

      &::selection
        background-color transparent

  h1, h2, h3, h4, h5, h6, p
    margin 0
    line-height inherit


.nav-icon i.material-icons
    min-width 2.5rem
    font-size 1.75rem

    &.large
      font-size 2.35rem
    &.big
      font-size 2.05rem
    &.small
      font-size 1.55rem
