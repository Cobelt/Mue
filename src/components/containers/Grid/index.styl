.grid, .navbar, .body, .footer, .card, .product
  display grid
  min-width 100%
  grid-auto-flow row

.grid
  .grid-element
    display inline-grid

    &.fill
      position relative
      > *
        position absolute
        top 0
        bottom 0
        left 0
        right 0

  > *
    --col auto
    --row auto
    --width 1
    --height 1
    grid-row var(--row) / span var(--height)
    grid-column var(--col) / span var(--width)

  .container
    justify-self center
    min-width 80%

.flow-column
  grid-auto-flow column

.gap-column-1
  grid-column-gap 1%
.gap-column-2
  grid-column-gap 2%
.gap-column-3
  grid-column-gap 3%
.gap-column-4
  grid-column-gap 4%
.gap-column-5
  grid-column-gap 5%
.gap-column-10
  grid-column-gap 10%


.row
  display flex
  flex-wrap wrap
  flex-direction row

  &.reverse
    flex-direction row-reverse

.column
  display flex
  flex-wrap wrap
  flex-direction column

  &.reverse
    flex-direction column-reverse

.flex-filler
  flex 1
