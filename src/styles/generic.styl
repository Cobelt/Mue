@import './colors.styl'

.bg-success
  background-color success-color
.bg-warning
  background-color warning-color
.bg-error
  background-color error-color

[class*='border-']
  box-sizing border-box
  border 1 solid #222
  &.border-rounded
    border-radius .2rem

  &.border-success
    border-color success-color
  &.border-warning
    border-color warning-color
  &.border-error
    border-color error-color