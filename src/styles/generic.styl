@import './colors.styl'

border-wdth = 4rem
.border-menu
  border-width 0
  border-color primary-color
  border-style solid
  transition border-width .2s

  &.opn
    border-width border-wdth
    border-top 0
    border-bottom 0

.border-menu-icon
  transition width .2s
  &.opn
    width border-wdth

.rotate-anim
  max-height 15rem
  transform rotate(20deg)
  &:hover
    animation rotate 0.5s

  @keyframes rotate
    0%
      transform rotate(20deg)
    100%
      transform rotate(379deg)


.font-success
  color success-color
.font-warning
  color warning-color
.font-error
  color error-color
.font-info
  color info-color

.bg-success
  background-color success-color
.bg-warning
  background-color warning-color
.bg-error
  background-color error-color
.bg-info
  background-color info-color

.border-success, .border-warning, .border-error, .border-info
  box-sizing border-box
  border 1 solid #222
  &.border-rounded
    border-radius .2rem

.border-success
  border-color success-color
.border-warning
  border-color warning-color
.border-error
  border-color error-color
.border-info
  border-color info-color

.extends-on-hover
  transition width 10s
  &:hover
    width 120%

.grow-on-hover
  transition height 10s
  &:hover
    height 120%

span.block
  display block