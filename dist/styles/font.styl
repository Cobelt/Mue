@import './variables.styl'

@import url('https://fonts.googleapis.com/css?family=Karla')
@import url('https://fonts.googleapis.com/css?family=Ubuntu')
@import url('https://fonts.googleapis.com/css?family=Oswald')
@import url('https://fonts.googleapis.com/css?family=Poppins')
@import url('https://fonts.googleapis.com/css?family=Rubik')

google-fonts = Rubik, Karla, Ubuntu, Poppins, Oswald
font-stack = google-fonts, Roboto, 'Segoe UI', Oxygen-Sans, Ubuntu, Cantarell, 'Helvetica Neue', sans-serif
off-black = rgba(0, 0, 0, 0.85)

h1-fontsize = 3.5rem
h2-fontsize = 2.8rem
h3-fontsize = 2.2rem
h4-fontsize = 1.7rem
h5-fontsize = 1.3rem
h6-fontsize = 1.0rem

span-fontsize = h6-fontsize
p-fontsize = h6-fontsize


html
  line-height 1.5
  color off-black
  font-family font-stack
  font-weight normal

  @media only screen and (min-width 0)
    font-size 14px
  @media only screen and (min-width medium-screen)
    font-size 14.5px
  @media only screen and (min-width large-screen)
    font-size 15px


  a
    text-decoration none

  h1, h2, h3, h4, h5, h6
    font-weight 400
    line-height 1.3
    a
      font-weight inherit

  h1
    font-size h1-fontsize
  h2
    font-size h2-fontsize
  h3
    font-size h3-fontsize
  h4
    font-size h4-fontsize
  h5
    font-size h5-fontsize
  h6
    font-size h6-fontsize

  p
    font-size p-fontsize
  span
    font-size span-fontsize

  .text-align-left
    text-align left
  .text-align-center
    text-align center
  .text-align-right
    text-align right
