@import '../../styles/font.styl'
@import '../../styles/colors.styl'

.card
  background-color #dfdfdf
  border-radius .2rem
  overflow hidden

  .card-image, .card-description
    display inline-grid

  .card-image
    object-fit cover
    min-width 100%
    max-width 100%

  .card-description
    padding .3rem
    overflow hidden
    wrap ellipsis
    z-index 1
    width 100%
    font-size 1.4rem

  .footer
    //background-color secondary-color
    .footer-element
      width 100%

      & > *
        display inline-grid
        text-align center

      & > a
        color white
        transition background-color .2s
        &:hover
          background-color link-hover-black-shade-bg